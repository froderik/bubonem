source 'https://rubygems.org'

# sintra is a micro web framework
gem 'sinatra'

# haml for readable templates free of HTML
gem 'haml', '~> 6'

# we need to call some endpoints to get data
gem 'rest-client'

# some of the endpoint deal with UTC so we need time zone conversion
gem 'tzinfo'

# library for solar times
gem 'RubySunrise'

# we run unicorn in production
gem 'unicorn'

# for secrets outside of the code
gem 'dotenv'
